{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CHE-NU Thread Event",
  "type": "object",
  "required": [
    "event_id",
    "thread_id",
    "event_type",
    "created_at",
    "actor_type",
    "actor_id",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string"
    },
    "thread_id": {
      "type": "string"
    },
    "event_type": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "actor_type": {
      "type": "string",
      "enum": [
        "human",
        "agent"
      ]
    },
    "actor_id": {
      "type": "string"
    },
    "payload": {
      "type": "object"
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "target_id"
        ],
        "properties": {
          "type": {
            "type": "string"
          },
          "target_id": {
            "type": "string"
          }
        }
      }
    },
    "redaction_level": {
      "type": "string",
      "enum": [
        "public",
        "semi_private",
        "private"
      ],
      "default": "private"
    }
  }
}