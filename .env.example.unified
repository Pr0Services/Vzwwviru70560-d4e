# .env.example
# CHE·NU™ V75 - Environment Variables Template
#
# Copy to .env and fill in values
#
# @version 75.0.0

# ============================================================================
# APPLICATION
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# DATABASE
# ============================================================================
# Production PostgreSQL
DATABASE_URL=postgresql://chenu:your_password@localhost:5432/chenu_db

# Development SQLite fallback
USE_SQLITE=false

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# Development mock
USE_MOCK_REDIS=false

# ============================================================================
# AUTHENTICATION
# ============================================================================
JWT_SECRET=your_super_secret_key_change_in_production_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# OPA (Open Policy Agent)
# ============================================================================
OPA_URL=http://localhost:8181
OPA_ENABLED=true

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# FILE STORAGE
# ============================================================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,png,jpg,jpeg,gif,mp4,mp3

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================
# OpenAI for Nova
OPENAI_API_KEY=sk-your-openai-key

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@che-nu.com
SMTP_PASSWORD=your_smtp_password

# ============================================================================
# MONITORING (Optional)
# ============================================================================
SENTRY_DSN=https://your-sentry-dsn
PROMETHEUS_ENABLED=true

# ============================================================================
# DOCKER SPECIFIC
# ============================================================================
DB_PASSWORD=your_secure_database_password
