# ============================================================================
# CHEÂ·NU Environment Variables
# 
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# ============================================================================

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=chenu
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=chenu
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://chenu:your_secure_password_here@localhost:5432/chenu

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@localhost:6379/0

# ============================================================================
# JWT Authentication
# ============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_256_bit_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# Server Configuration
# ============================================================================
CHENU_HOST=0.0.0.0
CHENU_PORT=8000
CHENU_LOG_LEVEL=INFO
CHENU_DEBUG=false

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ============================================================================
# AI API Keys
# ============================================================================
# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx

# OpenAI (GPT)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxx

# Google (Gemini) - Optional
GOOGLE_API_KEY=

# Replicate - Optional
REPLICATE_API_KEY=

# ============================================================================
# Feature Flags
# ============================================================================
CHENU_ENABLE_XR=true
CHENU_ENABLE_LIVE=true
CHENU_ENABLE_GOVERNANCE_DASHBOARD=true

# ============================================================================
# R&D Compliance Flags (DO NOT DISABLE IN PRODUCTION)
# ============================================================================
CHENU_ENFORCE_HUMAN_GATES=true
CHENU_AUDIT_ALL_ACTIONS=true
CHENU_DISABLE_RANKING_ALGORITHMS=true

# ============================================================================
# External Services (Optional)
# ============================================================================
# Sentry for error tracking
SENTRY_DSN=

# Analytics
ANALYTICS_ENABLED=false

# Email (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@che-nu.com
