{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PromotionCandidate",
  "type": "object",
  "required": [
    "candidate_id",
    "sphere",
    "pattern_title",
    "pattern_description",
    "evidence_count",
    "promotion_decision"
  ],
  "properties": {
    "candidate_id": {
      "type": "string"
    },
    "note_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "sphere": {
      "type": "string"
    },
    "sector": {
      "type": [
        "string",
        "null"
      ]
    },
    "pattern_title": {
      "type": "string"
    },
    "pattern_description": {
      "type": "string"
    },
    "evidence_count": {
      "type": "integer",
      "minimum": 1
    },
    "promotion_decision": {
      "type": "string",
      "enum": [
        "pending",
        "approved",
        "rejected"
      ]
    },
    "review_notes": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "additionalProperties": false
}