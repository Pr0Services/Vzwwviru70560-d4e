      "input": "CHE_NU_CORE_REFERENCE.canonical.json",
      "canonicalization": "json_sorted_keys_utf8"
    },

    "signature": {
      "algorithm": "Ed25519",
      "encoding": "base64",
      "value": "PENDING_HUMAN_SIGNATURE",
      "note": "Must be generated by human authority using private key"
    },

    "publicKey": {
      "algorithm": "Ed25519",
      "encoding": "PEM",
      "value": "PENDING_PUBLIC_KEY",
      "note": "Public key for verification - safe to distribute"
    },

    "signedBy": {
      "role": "human_authority",
      "identifier": "CHE-NU_FOUNDER",
      "timestamp": null
    },

    "validationRules": {
      "requiredForExecution": true,
      "onInvalidSignature": [
        "reject_changes",
        "invalidate_ai_output",
        "require_human_intervention"
      ],
      "onValidSignature": [
        "allow_development",
        "allow_ai_execution",
        "permit_compatible_modules"
      ]
    },

    "aiConstraints": {
      "mustIncludeAsIs": true,
      "cannotModify": true,
      "cannotReinterpret": true,
      "cannotOptimize": true,
      "treatAsImmutableLaw": true,
      "verifyWhenInstructed": true,
      "refuseConflictingRequests": true
    },

    "allowedOperations": [
      "reference",
      "build_on_top",
      "create_compatible_modules",
      "ask_clarification"
    ],

    "forbiddenOperations": [
      "alter_authority_rules",
      "bypass_human_validation",
      "change_decision_chains",
      "modify_signature_or_hash",
      "rephrase_core_laws",
      "summarize_core_laws"
    ]
  }
}
